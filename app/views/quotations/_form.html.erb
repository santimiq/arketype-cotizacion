<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-6">
      <!-- Insert form here -->
        <div class="form-login">
          <%= simple_form_for @quotation do |f| %>
            <%= f.error_notification %>
            <div class="form-row">
              <div class="col-6 form-group">
                <%= f.input :titulo, placeholder: 'McDonalds' %>
              </div>
              <div class="col-6 form-group">
                <%= f.input :servicio, placeholder: 'Desarrollo Web' %>
              </div>
            </div>
            <%= f.input :fecha %>
            <%= f.input :scope, placeholder: 'DescripciÃ³n (Cada enter es una lÃ­nea aparte)' %>
            <%= f.input :photo, input_html: { class: 'd-none', id: 'photo-input' }, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Subir foto' %>
            <%= image_tag "", width: 300, class: "hidden", id: "photo-preview" %>


            <div class="requirements">
              <%= f.simple_fields_for :requirements do |pf| %>
                <h4>REQUERIMIENTOS</h4>
                <%= render 'requirement_fields', f: pf %>
              <% end %>
            </div>
            <%= link_to_add_association 'Agregar Requerimientos', f, :requirements, class: 'btn btn-primary', data: { association_insertion_node: '.requirements', association_insertion_method: :append } %>

            <%= f.simple_fields_for :days do |fec| %>
              <h4>ESTIMADO</h4>
              <%= render 'fecha_fields', f: fec %>
            <% end %>

            <div class="phases">
              <%= f.simple_fields_for :phases do |ph| %>
                <h4>FASES</h4>
                <%= render 'phase_fields', f: ph %>
              <% end %>
            </div>
            <%= link_to_add_association 'Agregar Fase', f, :phases, class: 'btn btn-primary', data: { association_insertion_node: '.phases', association_insertion_method: :append } %>


            <div class="concepts">
              <%= f.simple_fields_for :concept_quotations do |cq| %>
                <h4>Concepto Cotizacion</h4>
                <%= render 'concept_quotations_fields', f: cq %>
              <% end %>
              <%= f.simple_fields_for :concepts do |con| %>
                <h4>CONCEPTOS</h4>
                <%= render 'concept_fields', f: con %>
              <% end %>
            </div>
            <%= link_to_add_association 'Agregar Concepto', f, :concepts, class: 'btn btn-primary', data: { association_insertion_node: '.concepts', association_insertion_method: :append } %>

            <%= f.simple_fields_for :conditions do |con| %>
              <%= render 'condition_fields', f: con %>
            <% end %>

            <%= f.simple_fields_for :totals do |subtotal| %>
              <%= render 'subtotal_fields', f: subtotal %>
            <% end %>

            <%= f.button :submit, 'Enviar', class: 'btn btn-success' %>
          <% end %>
        </div>
    </div>
  </div>
</div>

